<footer class="jumbotron">
    <h2>Do you want to become an Explorer?</h2>
    <p>Join our waiting list and we'll send you an invitation when our beta goes live</p>
    <div class="signup">
      <%= form_for @article, url: {action: "create"}, html: {class: "nifty_form"} do |f| %>
        <%= f.text_field :title %>
        <%= f.submit "Create" %>
      <% end %>
      <input type="text" class="form-control" placeholder="Enter your email">
    </div>
</footer>